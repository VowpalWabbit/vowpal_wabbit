[
    {
        "test_name": "cb_two_action",
        "data_func": {
            "name": "generate_cb_data",
            "params": {
                "num_examples": 100,
                "num_features": 1,
                "action_range": [
                    0,
                    2
                ],
                "reward_function": {
                    "name": "constant_reward",
                    "params": {
                        "reward": [
                            1,
                            0
                        ]
                    }
                },
                "logging_policy": {
                    "name": "even_probability",
                    "params": {}
                }
            }
        },
        "assert_functions": [
            {
                "name": "assert_loss",
                "params": {
                    "expected_loss": -1,
                    "decimal": 1
                }
            },
            {
                "name": "assert_prediction",
                "params": {
                    "expected_value": [
                        1,
                        0
                    ],
                    "threshold": 0.8
                }
            }
        ],
        "grids": {
            "cb": {
                "#base": [
                    "--cats 2 --min_value 0 --max_value 2 --bandwidth 1"
                ]
            },
            "epsilon": {
                "--epsilon": [
                    0.1,
                    0.2,
                    0.3
                ]
            }
        },
        "grids_expression": "cb * (epsilon)",
        "output": [
            "--readable_model",
            "-p"
        ]
    },
    {
