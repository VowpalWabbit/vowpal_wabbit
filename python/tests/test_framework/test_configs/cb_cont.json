    {
        "test_name": "cb_one_action",
        "data_func": {
            "name": "generate_cb_data",
            "params": {
                "num_examples": 10,
                "num_features": 1,
                "action_range": [
                    0,
                    1
                ],
                "reward_function": {
                    "name": "fixed_reward",
                    "params": {}
                },
                "logging_policy": {
                    "name": "even_probability"
                }
            }
        },
        "assert_functions": [
            {
                "name": "assert_loss",
                "params": {
                    "expected_loss": -1
                }
            },
            {
                "name": "assert_prediction",
                "params": {
                    "expected_value": 0,
                    "threshold": 0.1
                }
            }
        ],
        "grids": {
            "g0": {
                "#base": [
                    "--cats 1 --min_value 0 --max_value 1 --bandwidth 1"
                ]
            },
            "g1": {
                "--cb_type": [
                    "ips",
                    "mtr",
                    "dr",
                    "dm"
                ]
            }
        },
        "grids_expression": "g0 * g1",
        "output": [
            "--readable_model",
            "-p"
        ]
    }
